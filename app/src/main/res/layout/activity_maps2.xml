<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsActivity2">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/mapRow">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
    </FrameLayout>>

    <LinearLayout
        android:id="@+id/classCodeRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/submitRow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <EditText
            android:id="@+id/etClassCode"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/checkClassCodeButton"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Check Class Code"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/submitRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <Button
            android:id="@+id/submitButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Check in"
            android:textSize="18sp" />
        <Button
            android:id="@+id/addClassButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Add CLass"
            android:textSize="18sp" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
