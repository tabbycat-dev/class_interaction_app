<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prompt Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etClassCode"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrompt"
        android:hint="Class Code"
        android:inputType="textCapSentences"
        />
    <EditText
        android:id="@+id/etClassName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etClassCode"
        android:inputType="textCapSentences"
        android:hint="Class Name"
        />

    <Button
        android:id="@+id/btnCancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etClassName"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btnOk"
        android:layout_toStartOf="@+id/btnOk"
        android:text="@android:string/cancel" />

    <Button
        android:id="@+id/btnOk"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etClassName"
        android:layout_marginTop="5dp"
        android:text="@android:string/ok" />

</RelativeLayout>